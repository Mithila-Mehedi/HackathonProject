<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/front_backgnd"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/SignUpUsernameEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Enter your name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="#A7A0A0"
        android:textColor="#3D3B3B"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:layout_marginTop="60dp" />

    <EditText
        android:id="@+id/SignUpEmailEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Enter your email"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="#A7A0A0"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#3D3B3B" />

    <EditText
        android:id="@+id/SignUpPasswordEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Enter your password"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColorHint="#A7A0A0"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#3D3B3B" />

    <Button
        android:id="@+id/SignUpButtonId"
        android:layout_marginTop="100dp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="Sign up"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/signin_bg"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/SignInTextViewId"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center"
        android:textColor="#050505"
        android:textSize="20dp"
        android:text="Are you alreay Registered?Sign in" />

    <ProgressBar
        android:id="@+id/progressbarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />

</LinearLayout>